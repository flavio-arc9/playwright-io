{
	"compilerOptions": {
		"module": "ESNext",							// Usar "ESNext" para módulos ES
		"target": "es2022",							// Apuntar a ES2022 para características modernas de JavaScript		
		"moduleResolution": "node",					// Resolución de módulos al estilo Node.js
		"strict": true,								// Habilitar todas las verificaciones estrictas
		"esModuleInterop": true,					// Habilitar interoperabilidad entre módulos ES y CommonJS
		"allowSyntheticDefaultImports": true, 		// Permitir importaciones por defecto sintéticas
		"skipLibCheck": true,						// Omitir verificación de tipos en archivos de declaración
		"forceConsistentCasingInFileNames": true, 	// Forzar consistencia en el uso de mayúsculas y minúsculas en nombres de archivos
		"outDir": "./dist",							// Directorio de salida para archivos compilados
		"baseUrl": ".",								// Base URL para resolución de módulos
		"rootDir": "./src",							// Habilitar soporte para archivos JavaScript
		"allowJs": true, 							// Habilitar generación de archivos de declaración
		"declaration": true, 						// Habilitar generación de mapas de declaración
		"declarationMap": true,	        			// Habilitar soporte para archivos JavaScript
		"resolveJsonModule": true,					// Habilitar soporte para archivos JSON
		"removeComments": false,	    			// No eliminar comentarios en archivos de salida
		"strictFunctionTypes": false,   			// Deshabilitar verificación estricta de tipos de funciones
		"experimentalDecorators": true, 			// Habilitar soporte para decoradores experimentales
		"lib": [
			"es2023",
			"dom",
			"es2021"
		],
		"types": [
			"node",
			"webdriverio",
			"@wdio/types",
			"playwright"
		]
	},
	"include": ["src/**/*"], // Incluye todos los archivos JS y TS en la carpeta src
	"exclude": [
		"node_modules",
		"**/node_modules/*",
		"build",
		"dist",
		"docs",
		"examples",
		"tests"
	]
}